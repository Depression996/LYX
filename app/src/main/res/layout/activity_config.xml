<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfigActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="背景颜色:" />
    <RadioGroup
        android:id="@+id/background_color_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/white_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白色" />
        <RadioButton
            android:id="@+id/yellow_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄色" />
        <RadioButton
            android:id="@+id/green_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绿色" />
        <RadioButton
            android:id="@+id/blue_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝色" />
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="字体大小:" />
    <RadioGroup
        android:id="@+id/font_size_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/size_16_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16sp" />
        <RadioButton
            android:id="@+id/size_18_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18sp" />
        <RadioButton
            android:id="@+id/size_20_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20sp" />
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="字体颜色:" />
    <RadioGroup
        android:id="@+id/font_color_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/black_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑色" />
        <RadioButton
            android:id="@+id/red_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红色" />
        <RadioButton
            android:id="@+id/blue_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝色" />
    </RadioGroup>
    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存" />
</LinearLayout>